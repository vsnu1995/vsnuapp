
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      
    <% @events.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
          <% if post.users %>
        <td><%= post.users %></td>
          <% else%>
          <td><%= "Anonymous" %></td>
          <% end %>
          
        
            
        <td><%= Category.find(post.category_id).name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= search_form_for @q do |f| %>
  <%= f.search_field  :title_or_body_cont %>
  <%= f.submit  %>
<% end %>
<br>
<div id ="a1">
    <%= link_to 'New Post', new_post_path %>
</div>